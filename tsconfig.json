{
  "compilerOptions": {
    "lib": ["es2022"],
    "target": "es2022",
    "module": "NodeNext",
    "skipLibCheck": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "allowUnreachableCode": false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*"]
}
